<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5EAC7ED"
    tools:context=".UniversityFragment">


    <TextView
        android:id="@+id/tvPersonalData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="124dp"
        android:text="Personal Data"
        android:textColor="#0B0A0A"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="297dp"
        android:layout_height="91dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#B0FFFFFF"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        app:cardElevation="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPersonalData"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.441"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPersonalData">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textColor="#A4333131"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVname"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="#A4333131"
                    android:textColor="#A4333131"
                    android:textColorHint="#A4333131"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:textColor="#A4333131"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVaddress"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="#A4333131"
                    android:textColor="#A4333131"
                    android:textColorHint="#A4333131"
                    android:textSize="17dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUniversityData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="University Data"
        android:textColor="#131212"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <EditText
        android:id="@+id/edtvUniversityName"
        android:layout_width="355dp"
        android:layout_height="58dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Enter a University Name"
        android:paddingHorizontal="15dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUniversityName" />

    <EditText
        android:id="@+id/edtvUniversityNum"
        android:layout_width="376dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Enter a University Number"
        android:paddingHorizontal="15dp"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUniversityNum" />

    <TextView
        android:id="@+id/tvUniversitySpecialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="36dp"
        android:text="University Specialization"
        android:textColor="#C9050505"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtvUniversityName" />

    <EditText
        android:id="@+id/edtvUniversitySpecialization"
        android:layout_width="371dp"
        android:layout_height="58dp"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/enter_a_university_specialization"
        android:paddingHorizontal="15dp"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUniversitySpecialization" />

    <TextView
        android:id="@+id/tvUniversityNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="32dp"
        android:text="@string/university_number"
        android:textColor="#C9050505"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtvUniversitySpecialization" />

    <TextView
        android:id="@+id/tvUniversityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="11dp"
        android:text="University Name"
        android:textColor="#C9050505"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUniversityData" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="371dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:text="finish"
        android:textColor="#88000000"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtvUniversityNum"
        app:layout_constraintVertical_bias="0.096" />

</androidx.constraintlayout.widget.ConstraintLayout>


